<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <cn.bingoogolapple.bgaindicator.BGAFixedIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:indicator_hasDivider="false"
        app:indicator_textColor="@color/selector_orange"
        app:indicator_textSizeNormal="@dimen/textSize_16"
        app:indicator_textSizeSelected="@dimen/textSize_18"
        app:indicator_triangleColor="@color/orange_pressed"
        app:indicator_triangleHeight="3dp"
        app:indicator_triangleHorizontalMargin="@dimen/size_level3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_content"
        style="@style/MatchAuto" />

    <Button
        android:id="@+id/btn_main_testNetVideo"
        style="@style/MatchWrap"
        android:background="@color/orange_normal"
        android:text="测试播放网络视频"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16" />

</LinearLayout>
