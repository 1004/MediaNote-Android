<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_audio_container"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_level1"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_audio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_level2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我是歌名"
            android:textColor="@color/black_dark"
            android:textSize="@dimen/textSize_16" />

        <TextView
            android:id="@+id/tv_audio_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我是歌手"
            android:textColor="@color/black_dark"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_audio_pre"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/selector_btn_audio_pre" />

    <ImageView
        android:id="@+id/iv_audio_play"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/selector_btn_audio_pause" />

    <ImageView
        android:id="@+id/iv_audio_next"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/selector_btn_audio_next" />
</LinearLayout>